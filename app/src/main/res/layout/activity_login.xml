<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.bugjlu.ots_trafficaid_client.activity.LoginActivity">

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="登录"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/l_password"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/l_userid" />

    <Button
        android:id="@+id/to_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="注册"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/l_password"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/l_userid" />

    <EditText
        android:id="@+id/l_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="帐号"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.45" />

    <EditText
        android:id="@+id/l_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="密码"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/l_userid"
        app:layout_constraintTop_toBottomOf="@+id/l_userid"
        app:layout_constraintRight_toRightOf="@+id/l_userid"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="169dp"
        android:layout_height="125dp"
        app:srcCompat="@drawable/applogo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/l_userid"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/l_userid"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/l_userid"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.6"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


</android.support.constraint.ConstraintLayout>
