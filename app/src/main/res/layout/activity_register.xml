<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.bugjlu.ots_trafficaid_client.activity.RegisterActivity">


    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/reg_userid"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/reg_password" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:text="取消"
        app:layout_constraintRight_toRightOf="@+id/reg_userid"
        app:layout_constraintTop_toBottomOf="@+id/reg_password" />

    <EditText
        android:id="@+id/prefer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="昵称"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/reg_userid"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/reg_userid"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/reg_userid"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/reg_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="帐号"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintVertical_bias="0.36" />

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="密码"
        android:inputType="textPassword"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/reg_userid"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/reg_userid"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/prefer_name"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="85dp"
        android:layout_height="83dp"
        app:srcCompat="@drawable/applogo"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/reg_userid"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/reg_userid"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/reg_userid" />


</android.support.constraint.ConstraintLayout>