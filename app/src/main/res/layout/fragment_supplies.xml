<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">

        <Button
            android:id="@+id/button_supply_others"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_red"
            android:text="查看周围物资"
            android:textColor="#fff"
            android:textSize="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingBottom="80dp"


        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="60dp"
            android:orientation="vertical"
            android:gravity="bottom"
            >

            <ImageView
                android:id="@+id/imageview_supply_development"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"



                app:srcCompat="@mipmap/development"

                android:textColor="#fff"
                android:textSize="40dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="搭配发展"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="60dp"
            android:orientation="vertical"
            android:gravity="bottom"
            >

            <ImageView
                android:id="@+id/imageview_supply_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:adjustViewBounds="true"



                app:srcCompat="@mipmap/mysupplies"

                android:textColor="#fff"
                android:textSize="40dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="个人物资"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>








</LinearLayout>
