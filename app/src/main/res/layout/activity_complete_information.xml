<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <EditText
        android:id="@+id/infor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:hint="姓名" />

    <Spinner
        android:id="@+id/infor_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/gender"
        android:layout_marginTop="18dp">
    </Spinner>

    <Spinner
        android:id="@+id/infor_emgcontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp">
    </Spinner>

    <EditText
        android:id="@+id/infor_idcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:hint="身份证号"
        android:layout_marginTop="18dp"/>

    <EditText
        android:id="@+id/infor_platenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:hint="车辆牌照"
        android:layout_marginTop="18dp"/>

    <EditText
        android:id="@+id/infor_cartype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:hint="车辆类型"
        android:layout_marginTop="18dp"/>

    <EditText
        android:id="@+id/infor_contactinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:hint="联系方式"
        android:layout_marginTop="18dp"/>

    <Button
        android:id="@+id/info_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="保存"
        android:textColor="@android:color/white"
        android:background="@drawable/button_rectangle_green"/>


</LinearLayout>